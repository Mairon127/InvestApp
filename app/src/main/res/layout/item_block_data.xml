<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_index"
            android:text="@string/block_number"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#987F35"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textAlignment="textStart"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:gravity="start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/previous_hash"
                android:textStyle="bold"
                android:textColor="#B19233"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textAlignment="textStart"
                android:layout_marginEnd="20dp"
                android:gravity="start"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_previous_hash"
                tools:text="Poprzedni hash"
                android:textColor="#D8A50D"
                android:textSize="16sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textAlignment="textStart"
                android:gravity="start" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_zaksi_gowania_operacji"
                android:textStyle="bold"
                android:textColor="#B19233"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textAlignment="textStart"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="start" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_timestamp"
                tools:text="Data zaksiÄ™gowania operacji"
                android:textSize="16sp"
                android:textColor="#D8A50D"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textAlignment="textStart"
                android:gravity="start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/block_amount"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#B19233"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textAlignment="textStart"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="start" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_amount"
                tools:text="Kwota"
                android:textSize="16sp"
                android:textColor="#D8A50D"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textAlignment="textStart"
                android:gravity="start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/block_hash"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#B19233"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textAlignment="textStart"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="start" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_hash"
                tools:text="Hash"
                android:textSize="16sp"
                android:textColor="#D8A50D"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textAlignment="textStart"
                android:gravity="start" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C1A44E"
        android:layout_gravity="bottom" />

</FrameLayout>